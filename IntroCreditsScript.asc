  //Wait(20);
  gIndianaTitle.Visible = true;
  StartCutscene(eSkipESCOnly);
  IntroCredits_ZoomButtonGraphic(bIndianaTitle, 1, 0.02);
  IntroCredits_SetButtonMaskScroll(bIJTitleGradient, 1, 4, 3, 0.5);
  //Wait(60);
